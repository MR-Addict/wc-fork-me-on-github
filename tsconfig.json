{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": false,
    "experimentalDecorators": true,

    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true
  },

  "exclude": ["node_modules", "dist"]
}
